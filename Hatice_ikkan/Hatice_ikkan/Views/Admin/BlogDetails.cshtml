@model Hatice_ikkan.Models.Blog

@{
    ViewBag.Title = "BlogDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-panel">
    <br />
    <h2>Blog Detay Sayfası</h2>
    <br />
    <div class="table-responsive">
        <table class="table table-striped">
            <tr>
                <th>Blog Id</th>
                <td> @Html.DisplayFor(model => model.Blog_id) </td>
            </tr>
            <tr>
                <th>Blog Başlık</th>
                <td> @Html.DisplayFor(model => model.Blog_Baslık)</td>
            </tr>
            <tr>
                <th>Blog Özet</th>
                <td>@Html.DisplayFor(model => model.Blog_Ozet)</td>
            </tr>
            <tr>
                <th>Blog Açıklama</th>
                <td>@Html.DisplayFor(model => model.Blog_Acıklama)</td>
            </tr>
            <tr>
                <th>Blog Resmi </th>
                <td>@Html.DisplayFor(model => model.Blog_Resmi)</td>
            </tr>
            <tr>
                <th>Blog Yazar</th>
                <td>@Html.DisplayFor(model => model.Yoneticiler.Y_Kullanici_Adi)</td>
            </tr>
            <tr>
                <th>Yapılacak İşlem</th>
                <td>
                    @Html.ActionLink("Güncelle", "BlogEdit", new { id = Model.Blog_id },new { @class="btn btn-success"})

                </td>
            </tr>
        </table>
    </div>
    @Html.ActionLink("Geri Dön", "BlogIndex")
</div>