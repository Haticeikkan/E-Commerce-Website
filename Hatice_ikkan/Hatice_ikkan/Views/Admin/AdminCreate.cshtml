@model Hatice_ikkan.Models.Yoneticiler

@{
    ViewBag.Title = "AdminCreate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="main-panel">
        <div class="table-responsive">
            <h2>Admin Detay Sayfası</h2>
            <hr />
            <table class="table table-bordered">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                
                <div class="form-group">
                    @Html.Label("Kullanıcı Adı:", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Y_Kullanici_Adi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Y_Kullanici_Adi, "", new { @class = "text-danger" })
                    </div>
                    @Html.Label("Şifre:", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Y_Sifre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Y_Sifre, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Oluştur" class="btn btn-success" />
                    </div>
                    <br />
                    <div>
                        @Html.ActionLink("Geri Dön", "Index")
                    </div>
                </div>
            </table>
        </div>
    </div>
}
