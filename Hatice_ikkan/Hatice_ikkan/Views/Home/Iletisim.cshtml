@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .header-v3 .container-menu-desktop {
        margin-bottom: 100px;
    }

    .header-v3 .wrap-menu-desktop {
        background-color: black;
    }
</style>

<h2 style="text-align:center">İLETİŞİM</h2>
<hr />

<section class="bg0 p-t-104 p-b-116">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div class="container">
            <div class="flex-w flex-tr">


                <div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md">
                    <form>
                        <h4 class="mtext-105 cl2 txt-center p-b-30">
                            Bize Ulaşın
                        </h4>

                        <div class="bor8 m-b-20 how-pos4-parent form-group ">
                            <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30 form-control" type="text" id="fromEmail" name="fromEmail" placeholder="Email Adresiniz">
                            <img class="how-pos4 pointer-none" src="~/Content/images/icons/icon-email.png" alt="ICON">
                        </div>

                        <div class="bor8 m-b-20 how-pos4-parent form-group ">
                            <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30 form-control" type="text" id="subject" name="subject" placeholder="Konu Başlığınız...">
                            <img class="how-pos4 pointer-none" src="~/Content/images/icons/baslik.png" alt="ICON">
                        </div>

                        <div class="bor8 m-b-30">
                            <textarea class="stext-111 cl2 plh3 size-120 p-lr-28 p-tb-25" id="body" name="body" rows="4" placeholder="Size Nasıl Yardımcı Olalım?"></textarea>
                        </div>

                        <button type="submit" class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer">
                            Gönder
                        </button>
                    </form>
                </div>

                <div class="size-210 bor10 flex-w flex-col-m p-lr-93 p-tb-30 p-lr-15-lg w-full-md">
                    <div class="flex-w w-full p-b-42">
                        <span class="fs-18 cl5 txt-center size-211">
                            <span class="lnr lnr-map-marker"></span>
                        </span>

                        <div class="size-212 p-t-2">
                            <span class="mtext-110 cl2">
                                Adres
                            </span>

                            <p class="stext-115 cl6 size-213 p-t-18">
                                Şehreküstü, Osmangazi / BURSA
                            </p>
                        </div>
                    </div>

                    <div class="flex-w w-full p-b-42">
                        <span class="fs-18 cl5 txt-center size-211">
                            <span class="lnr lnr-phone-handset"></span>
                        </span>

                        <div class="size-212 p-t-2">
                            <span class="mtext-110 cl2">
                                Konuşalım
                            </span>

                            <p class="stext-115 cl1 size-213 p-t-18">
                                <a href="tel:+905340411139"> 0 534 041 11 39 </a>
                            </p>
                        </div>
                    </div>

                    <div class="flex-w w-full">
                        <span class="fs-18 cl5 txt-center size-211">
                            <span class="lnr lnr-envelope"></span>
                        </span>

                        <div class="size-212 p-t-2">
                            <span class="mtext-110 cl2">
                                Satış Desteği
                            </span>

                            <p class="stext-115 cl1 size-213 p-t-18">
                                <a href="mailto:haticeikkan@hotmail.com">haticeikkan@hotmail.com</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
   
    </section>
            

