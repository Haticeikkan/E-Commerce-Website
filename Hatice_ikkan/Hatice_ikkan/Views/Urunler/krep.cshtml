@model IEnumerable<Hatice_ikkan.Models.Urunler>

<style>
    .header-v3 .container-menu-desktop {
        margin-bottom: 100px;
    }

    .header-v3 .wrap-menu-desktop {
        background-color: black;
    }
</style>

<!-- Product -->
<div class="bg0 m-t-23 p-b-140">
    <div class="container">
        <div class="flex-w flex-sb-m p-b-52">
            <div class="flex-w flex-l-m filter-tope-group m-tb-10">
                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5">
                    <a href="@Url.Action("Index","Urunler")"> Hepsi </a>
                </button>

                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5">
                    <a href="@Url.Action("pamuklu","Urunler")"> Pamuklu Kumaşlar </a>
                </button>

                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5">
                    <a href="@Url.Action("kislik","Urunler")"> Kışlık Kumaşlar </a>
                </button>

                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5">
                    <a href="@Url.Action("kot","Urunler")"> Kot Kumaşlar </a>
                </button>

                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1">
                    <a href="@Url.Action("krep","Urunler")"> Krep Kumaşlar </a>
                </button>

                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5">
                    <a href="@Url.Action("muhtelif","Urunler")"> Muhtelif Kumaşlar </a>
                </button>
            </div>

            <div class="flex-w flex-c-m m-tb-10">
                <div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
                    <i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
                    <i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                    Filtre
                </div>

                <div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
                    <i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
                    <i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                    Ara
                </div>
            </div>

            <!-- Search product -->
            <div class="dis-none panel-search w-full p-t-10 p-b-15">
                <div class="bor8 dis-flex p-l-15">
                    <button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04" id="textSearch">
                        <i class="zmdi zmdi-search"></i>
                    </button>

                    <form asp-action="krep" id="myForm" style="width:100%;">
                        <input asp-for="searchText" id="searchText" class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="searchText" placeholder="Ara...">
                    </form>
                </div>
            </div>

            <!-- Filter -->
            <form asp-action="krep" id="myForm" style="width:100%;">
                <div class="dis-none panel-filter w-full p-t-10">
                    <div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">


                        <div class="filter-col2 p-r-15 p-b-27">
                            <div class="mtext-102 cl2 p-b-15 form-group">
                                <input asp-for="min" type="text" class="form-control" id="minPrice" placeholder="Minimum Fiyat" style="padding:10px 20px;" />
                            </div>
                        </div>

                        <div class="filter-col2 p-r-15 p-b-27">
                            <div class="mtext-102 cl2 p-b-15 form-group">
                                <input asp-for="max" type="text" class="form-control" id="maxPrice" placeholder="Maximum Fiyat" style="padding:10px 20px;" />
                            </div>
                        </div>


                        <div class="filter-col2 p-r-15 p-b-27">
                            <a class="btn btn-info" id="filterBtn" style="color:white;padding:10px 20px;">Filtrele</a>
                        </div>
                    </div>

                </div>
            </form>

        </div>

        <div class="row isotope-grid">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item">
                    <!-- Block2 -->
                    <div class="block2">
                        <input type="hidden" value="@item.Urun_id" id="hiddenId" />
                        <div class="block2-pic hov-img0">
                            <img src="~/urun_resimleri/@item.Urun_Resmi" width="265" height="290" alt="IMG-PRODUCT">

                            <a href="@Url.Action("Details", "Urunler", new { id = item.Urun_id })" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                                Ayrıntılı İncele
                            </a>
                        </div>

                        <div class="block2-txt flex-w flex-t p-t-14">
                            <div class="block2-txt-child1 flex-col-l ">
                                <a href="@Url.Action("Details", "Urunler", new { id = item.Urun_id })" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                    @item.Urun_Adi
                                </a>

                                <span class="stext-105 cl3">
                                    @item.Urun_Fiyat
                                </span>
                            </div>

                            <div class="block2-txt-child2 flex-r p-t-3">
                                <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                    <img class="icon-heart1 dis-block trans-04" src="~/Content/images/icons/icon-heart-01.png" alt="ICON">
                                    <img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/Content/images/icons/icon-heart-02.png" alt="ICON">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.js"
        integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
        crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
        $("#filterBtn").click(function () {
            var min = $("#minPrice").val();
            var max = $("#maxPrice").val();

            // Yeni URL oluşturup sayfayı bu URL ile yeniden yükleyin
            var newUrl = "/Urunler/krep?min=" + min + "&max=" + max;
            window.location.href = newUrl;
        });
        $("#textSearch").click(function () {
            var st = $("#searchText").val();
            console.log(st);

            // Yeni URL oluşturup sayfayı bu URL ile yeniden yükleyin
            var newUrl = "/Urunler/krep?searchText=" + st;
            window.location.href = newUrl;
        });
    });
</script>